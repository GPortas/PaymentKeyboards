<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/keyboard_root_layout">

    <!-- First line of buttons -->
    <LinearLayout
        android:id="@+id/keyboard_first_row_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/keyboard_1"
            android:clickable="true"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="1"/>

        <TextView
            android:id="@+id/keyboard_2"
            android:clickable="true"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="2"/>

        <TextView
            android:id="@+id/keyboard_3"
            android:clickable="true"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="3"/>
    </LinearLayout>

    <!-- Second line of buttons -->
    <LinearLayout
        android:id="@+id/keyboard_second_row_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/keyboard_4"
            android:clickable="true"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="4"/>

        <TextView
            android:id="@+id/keyboard_5"
            android:clickable="true"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="5"/>

        <TextView
            android:id="@+id/keyboard_6"
            android:clickable="true"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="6"/>
    </LinearLayout>

    <!-- Third line of buttons -->
    <LinearLayout
        android:id="@+id/keyboard_third_row_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/keyboard_7"
            android:clickable="true"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="7"/>

        <TextView
            android:id="@+id/keyboard_8"
            android:clickable="true"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="8"/>

        <TextView
            android:id="@+id/keyboard_9"
            android:clickable="true"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="9"/>
    </LinearLayout>

    <!-- Fourth line of buttons -->
    <LinearLayout
        android:id="@+id/keyboard_fourth_row_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/keyboard_0"
            android:clickable="true"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="0"/>

        <LinearLayout
            android:id="@+id/keyboard_backspace"
            android:clickable="true"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/keyboard_backspace_icon"
                android:src="@drawable/ic_backspace_black_24dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>