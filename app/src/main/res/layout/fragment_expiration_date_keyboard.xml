<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/keyboard_root_layout">

    <LinearLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Month Selector -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/keyboard_month_title"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month"/>

            <!-- First line of buttons -->
            <LinearLayout
                android:id="@+id/keyboard_first_row_month_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/month1"
                    android:clickable="true"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="01"/>

                <TextView
                    android:id="@+id/month2"
                    android:clickable="true"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="02"/>

                <TextView
                    android:id="@+id/month3"
                    android:clickable="true"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="03"/>
            </LinearLayout>

            <!-- Second line of buttons -->
            <LinearLayout
                android:id="@+id/keyboard_second_row_month_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/month4"
                    android:clickable="true"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="04"/>

                <TextView
                    android:id="@+id/month5"
                    android:clickable="true"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="05"/>

                <TextView
                    android:id="@+id/month6"
                    android:clickable="true"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="06"/>
            </LinearLayout>

            <!-- Third line of buttons -->
            <LinearLayout
                android:id="@+id/keyboard_third_row_month_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/month7"
                    android:clickable="true"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="07"/>

                <TextView
                    android:id="@+id/month8"
                    android:clickable="true"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="08"/>

                <TextView
                    android:id="@+id/month9"
                    android:clickable="true"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="09"/>
            </LinearLayout>

            <!-- Fourth line of buttons -->
            <LinearLayout
                android:id="@+id/keyboard_fourth_row_month_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/month10"
                    android:clickable="true"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="10"/>

                <TextView
                    android:id="@+id/month11"
                    android:clickable="true"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="11"/>

                <TextView
                    android:id="@+id/month12"
                    android:clickable="true"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="12"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true" />

        <!-- Year Selector -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/keyboard_year_title"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/keyboard_years_scroll_container"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                </LinearLayout>

            </ScrollView>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>